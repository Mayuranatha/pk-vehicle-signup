<div id="signup-modal" class="modal">
    <div class="modal-background"></div>
    <div class="modal-card">
        <header class="modal-card-head">
            <p class="modal-card-title">Car Reservation</p>
            <button class="delete has-modal-close-behavior" data-modal="signup-modal"></button>
        </header>
        <section class="modal-card-body">

            <div class="field">
                <label class="label">Which car is being reserved?</label>
                <p class="control">
                            <span class="select">
                              <select id="reservation-car">
                                  {% for car in days[0].Cars %}
                                      {%  if car.is_available == 1 %}
                                          <option id="car-{{ car.car_id }}" value="{{ car.car_id }}">{{ car.name }}</option>
                                      {% endif %}
                                  {% endfor %}
                              </select>
                            </span>
                </p>
            </div>

            <div class="field">
                <label class="label">Which date?</label>
                <p class="control">
                    <input id="reservation-date" class="input" type="date" placeholder="Text input">
                </p>
            </div>

            <div class="columns">
                <div class="column is-half">
                    <div class="field">
                        <label class="label">Start hour?</label>
                        <p class="control">
                            <input id="reservation-hour-start" class="input" type="time" class="timepicker">
                        </p>
                    </div>
                </div>


                <div class="column is-half">
                    <div class="field">
                        <label class="label">End hour?</label>
                        <p class="control">
                            <input id="reservation-hour-end" class="input" type="time" class="timepicker">
                        </p>
                    </div>
                </div>
            </div>

            <div class="field">
                <label class="label">Who is making the reservation?</label>
                <p class="control">
                    <input id="reservation-who" class="input" type="text" placeholder="Text input">
                </p>
            </div>

            <div class="field">
                <label class="label">Comments about the reservation</label>
                <p class="control">
                    <textarea id="reservation-comments" class="textarea" placeholder="Textarea"></textarea>
                </p>
            </div>
        </section>
        <footer id="reservation-modal-footer" class="modal-card-foot">
            <span><i class="fa fa-spinner fa-spin is-hidden">&nbsp;</i></span>
            <a id="is-save-reservation-trigger" class="button is-success">Save changes</a>
            <a class="button has-modal-close-behavior" data-modal="signup-modal">Cancel</a>
        </footer>
    </div>
</div>